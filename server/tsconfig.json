{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "../dist/buildcache/server",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "../dist/server-app",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["jest","node"]
  },
  "exclude": ["node_modules", "dist", "./**/*.spec.ts"]
}